---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Fundamentals">
  <main class="flex-1 p-8">
    <div class="max-w-7xl mx-auto space-y-8">
      <!-- Page Header -->
      <div class="space-y-4">
        <h1 class="text-4xl font-bold text-gray-900">Fundamentals</h1>
        <p class="text-xl text-gray-600">Energy market fundamentals, analytics, and visualization tools</p>
      </div>

      <!-- Navigation Menu -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <nav class="space-y-6">
          
          <!-- Natural Gas - Direct Link -->
          <div class="border-b border-gray-100 pb-4">
            <a href="/fundamentals/natural-gas" class="group flex items-center justify-between p-4 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.5-7 .5 3 .5 5 .5 6 .5 1 1.5 1 1.5 1s1-.5 1.5-1c0-1 0-3 .5-6 2 2 2.5 5 2.5 7 2-1 2.5-3 2.5-3a8 8 0 01-1.343 11.657z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600">Natural Gas</h3>
                  <p class="text-sm text-gray-600">Natural gas market data, pricing, and analytics dashboard</p>
                </div>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Load Category - Dropdown Style -->
          <div class="border-b border-gray-100 pb-4">
            <div class="p-4 rounded-lg bg-gray-50">
              <div class="flex items-center mb-3">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">Load Analysis</h3>
                  <p class="text-sm text-gray-600">Electricity demand analysis and forecasting</p>
                </div>
              </div>
              <div class="ml-14 space-y-2">
                <a href="/fundamentals/load/weather-normalized-load" class="flex items-center p-3 rounded-md hover:bg-white hover:shadow-sm transition-all group">
                  <svg class="w-4 h-4 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  <div>
                    <div class="font-medium text-gray-900 group-hover:text-indigo-600">Structural Demand</div>
                    <div class="text-sm text-gray-500">Weather-normalized load analysis</div>
                  </div>
                </a>
              </div>
            </div>
          </div>

          <!-- Supply Stack Category - Dropdown Style -->
          <div>
            <div class="p-4 rounded-lg bg-gray-50">
              <div class="flex items-center mb-3">
                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">Supply Stack</h3>
                  <p class="text-sm text-gray-600">Generation capacity, supply curves, and energy storage</p>
                </div>
              </div>
              <div class="ml-14 space-y-2">
                <a href="/fundamentals/supply-stack/generation-supply-stack" class="flex items-center p-3 rounded-md hover:bg-white hover:shadow-sm transition-all group">
                  <svg class="w-4 h-4 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  <div>
                    <div class="font-medium text-gray-900 group-hover:text-indigo-600">Generation Supply Stack</div>
                    <div class="text-sm text-gray-500">Interactive ERCOT supply curve visualization</div>
                  </div>
                </a>
                <a href="/fundamentals/supply-stack/bess-capacity" class="flex items-center p-3 rounded-md hover:bg-white hover:shadow-sm transition-all group">
                  <svg class="w-4 h-4 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  <div>
                    <div class="font-medium text-gray-900 group-hover:text-indigo-600">BESS Capacity</div>
                    <div class="text-sm text-gray-500">Battery energy storage system analysis</div>
                  </div>
                </a>
              </div>
            </div>
          </div>

        </nav>
      </div>

      <!-- Quick Stats -->
      <div class="bg-gray-50 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Platform Overview</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-2xl font-bold text-indigo-600">4</div>
            <div class="text-sm text-gray-600">Analysis Tools</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-green-600">Real-time</div>
            <div class="text-sm text-gray-600">ERCOT Data</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-orange-600">Interactive</div>
            <div class="text-sm text-gray-600">Visualizations</div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout> 
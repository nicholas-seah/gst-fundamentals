// Secondary Prisma schema for ERCOT analytics_workspace database
// This connects to the third database containing ERCOT data

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client-secondary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_THIRD")
}

// ERCOT structural demand model
model ERCOT_structural_demand {
  id     Int    @id @default(autoincrement())
  Month  Int
  Zone   String
  Year   Int
  // Add other columns as needed based on your actual table structure
  
  @@map("ERCOT_structural_demand")
} 